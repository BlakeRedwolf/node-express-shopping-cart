{{# if products }}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      {{# each products }}
      <li class="list-group-item">
        <span class="badge">{{ this.qty }}</span>
        <strong>{{ this.item.title }}</strong>
        <span class="label label-success">{{ this.price }}</span>
        <div class="btn-group">
          <button class="btn btn-dark dropdown-toggle" type="button">Action <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a href="#">Reduce by 1</a></li>
            <li><a href="#">Reduce by All</a></li>
          </ul>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <strong>Total: {{ totalPrice }}</strong>
  </div>
</div>
{{ else }}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <button type="button" class="btn btn-dark">Checkout</button>
    <h2>No items in cart</h2>
  </div>
</div>
{{/if}}



