<div class="row">
  <div class="col-sm-6 sol-md-4 col-md-offset-4 col-sm-offset-3">
    <h1>Checkout</h1>
    <br>
    <h4>Your Total: ${{total}}</h4>
  </div>
</div>
<form id="payment-form" class="" action="/checkout" method="post">
  <br>
  <div class='form-row'>
    <div class='form-group col-md-8'>
      <label for="name-input" class='control-label'>Name on Card</label>
      <input type="text" id="name-input" class="form-control" placeholder="Name on Card">
    </div>

  </div>
  <div class='form-row'>
    <div class='form-group col-md-8'>
      <label for="card-number" class='control-label'>Card Number</label>
      <input id="card-number" class='form-control card-number' placeholder="Card Number" type='password'>
    </div>
  </div>
  <div class='form-row'>
    <div class='form-group col-md-8'>
      <label for="billing-address" class='control-label'>Billing Address</label>
      <input id="billing-address" autocomplete='off' class='form-control' placeholder="Billing Address" type='text'>
    </div>
  </div>
  <div class='form-row'>
    <div class='form-group cvc col-md-3'>
      <label for="cvc-number" class='control-label'>CVC</label>
      <input id="cvc-number" autocomplete='off' class='form-control card-cvc' placeholder='ex. 311' type='text'>
    </div>


    <div class='form-group col-md-2'>
      <label for="expiration-date" class='control-label'>Expiration</label>
      <input id="expiration-date" class='form-control card-expiry-month' placeholder='MM' type='text'>
    </div>


    <div class='form-group expiration col-md-3'>
      <label for="expiration-year" class='control-label'>Year</label>
      <input id="expiration-year" class='form-control card-expiry-year' placeholder='YYYY' type='text'>
    </div>
  </div>


  <div class='form-row'>
    <div class='form-group'>
      <label class='control-label'></label>

      <button class='form-control btn btn-dark' type='submit'> Continue â†’</button>

</form>

</div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script src="src/javascripts/checkout.hbs"></script>
